daemon off;

error_log /dev/stdout info;

events {
    worker_connections 1024;
}

rtmp {
    server {
        listen 1935;
        chunk_size 4096;
        buflen 2s;

        # Aplicação STREAM (entrada principal)
        application stream {
            live on;
            record off;
            allow publish all;
            allow play all;
            
            # Push para HLS
            push rtmp://localhost:1935/hls/$name;
            
            # Push também para LIVE (backup)
            push rtmp://localhost:1935/live/$name;

            # exec ffmpeg -i rtmp://localhost:1935/stream/$name \
            #   -c:v libx264 -b:v 1000k -f flv rtmp://localhost:1935/hls/${name};
        }

        # Aplicação LIVE (alternativa)
        application live {
            live on;
            record off;
            allow publish all;
            allow play all;
            
            # Push para HLS
            push rtmp://localhost:1935/hls/$name;
        }

        # Aplicação HLS (saída)
        application hls {
            live on;
            hls on;
            hls_fragment 5;
            hls_playlist_length 10;
            hls_path /opt/data/hls;
            hls_nested on;
            hls_fragment_naming system;
            allow publish all;
            allow play all;
            
            # Variantes de qualidade (opcional)
            hls_variant _720p2628kbs BANDWIDTH=2628000,RESOLUTION=1280x720;
            hls_variant _480p1128kbs BANDWIDTH=1128000,RESOLUTION=854x480;
            hls_variant _360p878kbs BANDWIDTH=878000,RESOLUTION=640x360;
            hls_variant _240p264kbs BANDWIDTH=264000,RESOLUTION=426x240;
        }

        #Aplicação de backup/raw
        application raw {
            live on;
            record off;
            allow publish all;
            allow play all;
        }
    }
}

http {
    server_tokens off;
    access_log /dev/stdout combined;
    sendfile off;
    tcp_nopush on;
    keepalive_timeout 65;

    server {
        listen 80;
        server_name _;

       # HLS - Arquivos .m3u8 e .ts
        location /hls {
            types {
                application/vnd.apple.mpegurl m3u8;
                video/mp2t ts;
            }
            root /opt/data;
            add_header Cache-Control no-cache;
            add_header Access-Control-Allow-Origin *;
            add_header X-Application "hls";
        }

      #  LIVE - Alternativa para HLS
        location /live {
            alias /opt/data/hls;
            types {
                application/vnd.apple.mpegurl m3u8;
                video/mp2t ts;
            }
            add_header Cache-Control no-cache;
            add_header Access-Control-Allow-Origin *;
            add_header X-Application "live";
        }

        # STATS - Página de status RTMP
        location /stat {
            rtmp_stat all;
            rtmp_stat_stylesheet stat.xsl;
            add_header Access-Control-Allow-Origin *;
            allow all;
        }

        # Stylesheet para status
        location /stat.xsl {
            root /www/static;
            allow all;
        }

        # Health check
        location / {
            add_header Content-Type text/plain;
            return 200 "NGINX RTMP Server OK\n";
        }

        # Debug - Listar arquivos HLS
        location /debug {
            alias /opt/data/hls;
            autoindex on;
            add_header Content-Type text/html;
        }
    }
}